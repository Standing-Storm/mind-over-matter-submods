[
  {
    "type": "MOD_INFO",
    "id": "mom_no_power_learn_delay",
    "name": "Mind Over Matter: <color_magenta>Remove Random Delay Before Learning New Powers</color>",
    "authors": [ "Standing-Storm" ],
    "description": "Remove the 12 to 168 hour delay before becoming eligible to learn a new power.  Individual powers still have their own rolling delays.",
    "category": "misc_additions",
    "dependencies": [ "dda", "mindovermatter" ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_PSI_LEARNING_VITAMIN_COUNTER",
    "recurrence": [ "5 minutes", "5 minutes" ],
    "condition": {
      "and": [
        {
          "u_has_any_trait": [
            "BIOKINETIC",
            "CLAIRSENTIENT",
            "ELECTROKINETIC",
            "PHOTOKINETIC",
            "PYROKINETIC",
            "TELEKINETIC",
            "TELEPATH",
            "TELEPORTER",
            "VITAKINETIC"
          ]
        },
        { "math": [ "u_vitamin('vitamin_psi_learning_counter')", "==", "0" ] },
        { "not": { "u_has_effect": "effect_psi_learning_new_power" } }
      ]
    },
    "deactivate_condition": {
      "not": {
        "u_has_any_trait": [
          "BIOKINETIC",
          "CLAIRSENTIENT",
          "ELECTROKINETIC",
          "PHOTOKINETIC",
          "PYROKINETIC",
          "TELEKINETIC",
          "TELEPATH",
          "TELEPORTER",
          "VITAKINETIC"
        ]
      }
    },
    "effect": [ { "math": [ "u_vitamin('vitamin_psi_learning_counter')", "+=", "1" ] } ]
  }
]
